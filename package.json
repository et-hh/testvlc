{
  "name": "test",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main/index.js",
  "scripts": {
    "dev": "elecrun --esbuild-config-file esbuild.config.js",
    "build": "rollup -c",
    "postbuild": "node ./script/copy-files.js",
    "pack": "npm run build && npm run rebuild && electron-builder --win",
    "rebuild": "electron-rebuild -m ./app"
  },
  "build": {
    "productName": "test",
    "copyright": "Copyright Â© 2022 GUMING",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "build",
      "app": "app"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "runAfterFinish": true,
      "include": "./build/installer.nsh",
      "deleteAppDataOnUninstall": true,
      "removeDefaultUninstallWelcomePage": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "chalk": "^4.1.0",
    "electron": "17.4.11",
    "electron-builder": "23.6.0",
    "electron-debug": "3.2.0",
    "electron-rebuild": "3.2.7",
    "electron-run": "2.3.1",
    "esbuild": "0.14.54",
    "glob": "^7.2.0",
    "prettier": "^3.0.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rollup": "2.79.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-json": "^4.0.0",
    "xml2js": "^0.6.0"
  },
  "dependencies": {
    "fs-extra": "10.0.1",
    "koffi": "^2.5.20"
  },
  "engines": {
    "node": ">= 16"
  }
}
